<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp"

    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination" />

        <ImageButton
            android:id="@+id/close_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/close_24dp" />

        <ImageView
            android:id="@+id/place_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headline"
            android:paddingTop="9dp"
            app:srcCompat="@drawable/place_24dp"
            />

        <EditText
            android:id="@+id/destination_editText"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:focusable="false"
            android:layout_marginRight="35dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/place_icon"
            android:layout_below="@id/headline"
            />

        <ImageView
            android:id="@+id/date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/destination_editText"
            android:paddingTop="9dp"
            app:srcCompat="@drawable/date_range_24dp"/>

        <EditText
            android:id="@+id/first_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:layout_below="@id/destination_editText"
            android:layout_toRightOf="@id/date_icon"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/last_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:layout_marginRight="35dp"
            android:layout_below="@+id/destination_editText"
            android:layout_alignParentRight="true"
             />

