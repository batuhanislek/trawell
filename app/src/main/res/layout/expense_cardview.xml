<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"

    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/expense_type_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Type" />

        <ImageButton
            android:id="@+id/close_expense_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:tint="@android:color/darker_gray"
            android:layout_marginTop="-4dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/close_24dp" />

        <View
            android:id="@+id/expense_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/expense_type_textView"
            android:background="@android:color/darker_gray">

        </View>

        <TextView
            android:id="@+id/expense_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/expense_line"
            android:layout_marginTop="10dp"
            android:text="Comment"/>

        <TextView
            android:id="@+id/expense_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/expense_exp"
            android:layout_marginTop="10dp"
            android:text="Price"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>