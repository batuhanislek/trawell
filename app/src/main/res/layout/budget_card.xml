<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"


    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="normal"
            app:fontFamily="@font/roboto_medium"
            android:text="Destination" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/headline"
            android:layout_marginTop="7dp"
            android:background="@android:color/darker_gray">
        </View>

        <TextView
            android:id="@+id/dest_budget_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headline"
            android:layout_marginTop="20dp"
            android:text="Budget" />

        <EditText
            android:id="@+id/dest_budget_editText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/headline"
            android:layout_marginLeft="110dp"
            android:inputType="number|numberDecimal"
            android:layout_toRightOf="@id/dest_budget_textView" />

        <TextView
            android:id="@+id/days_spent_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/dest_budget_textView"
            android:text="Days Spent"/>

        <TextView
            android:id="@+id/days_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/days_spent_textView"
            android:layout_below="@id/dest_budget_editText"
            android:text="0"/>
        <!--
        <TextView
            android:id="@+id/current_expense_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/days_spent_textView"
            android:text="Current Expense" />

        <TextView
            android:id="@+id/current_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/days_spent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="57dp"
            android:layout_toRightOf="@id/current_expense_textView"
            android:text="0 $"/>
            -->

        <TextView
            android:id="@+id/transportation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_below="@id/days_spent_textView"
            android:text="Transportation Expense"/>


        <EditText
            android:id="@+id/transportation_editText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/days_spent"
            android:layout_marginLeft="10dp"
            android:paddingBottom="3dp"
            android:inputType="number|numberDecimal"
            android:layout_toRightOf="@id/transportation_textView" />

        <TextView
            android:id="@+id/accomodation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_below="@id/transportation_textView"
            android:text="Accomodation Expense"/>


        <EditText
            android:id="@+id/accomodation_editText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/transportation_textView"
            android:layout_marginLeft="10dp"
            android:paddingBottom="3dp"
            android:inputType="number|numberDecimal"
            android:layout_toRightOf="@id/transportation_textView" />


    </RelativeLayout>

</android.support.v7.widget.CardView>