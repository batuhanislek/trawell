<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SelectionActivity">

    <RelativeLayout
        android:id="@+id/selection_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/selection_back_button"
            android:layout_alignParentLeft="true"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/arrow_back_24dp"
            />

        <TextView
            android:id="@+id/selection_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/selection_back_button"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="Select the Trip"/>

        <View
            android:id="@+id/profile_line"
            android:layout_width="wrap_content"
            android:layout_below="@id/selection_back_button"
            android:layout_height="1dp"
            android:background="#A4A4A4" />
    </RelativeLayout>

    <ListView
        android:id="@+id/selection_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>